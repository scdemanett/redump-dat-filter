{
  "name": "redump-dat-filter",
  "version": "0.1.0",
  "description": "Electron desktop app for filtering Redump DAT files by region.",
  "main": "dist-electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:watch:main\" \"npm:dev:electron\"",
    "dev:renderer": "node scripts/vite-dev.mjs",
    "watch:main": "tsup --config tsup.config.ts --watch",
    "dev:electron": "wait-on dist-electron/main.js dist-electron/preload.js http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electronmon .",
    "build": "npm run clean && npm run build:main && npm run build:renderer",
    "build:main": "tsup --config tsup.config.ts",
    "build:renderer": "node scripts/vite-build.mjs",
    "clean": "rimraf dist dist-electron",
    "package": "npm run build && electron-builder",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "react",
    "redump",
    "dat"
  ],
  "dependencies": {
    "fast-xml-parser": "^5.3.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.4",
    "rimraf": "^5.0.10",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.redump.filter",
    "productName": "Redump DAT Filter",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility",
      "icon": "build/icon.png"
    }
  }
}
